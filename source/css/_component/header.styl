.header
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  +pc-layout()
    padding: 50px 0;
  +sp-layout()
    margin-bottom: 4%;
    padding: 40px 0;
    color: white;
  .sp-bg
    fillParent(absolute, $zIndex-bottom)
    background-position: bottom;
    background-repeat: no-repeat;
    +pc-layout()
     background-size: 0%;
    +sp-layout()
      background-color: #cfd0f8;
      background-size: cover;    
      &::after
        content: '';
        fillParent(absolute, $zIndex-0)
        background-color: hsla(0,0%,100%,.4);
  .title, .subtitle

    font-family: $font-family-base;
    font-weight: 400;
    letter-spacing: 4px;
    +pc-layout()
      animation: fadeInDown 0.5s ease-out forwards;
    +sp-layout()
      animation: fadeInDown 0.5s ease-out forwards;
  
  .title
    transition: color 0.3s ease-out;
    +pc-layout()
      font-size: 48px;
      line-height: 60px;
      &:hover
        color: $link-color;
    +sp-layout()
      font-size: 44px;
      line-height: 56px;
 

  .subtitle
    font-family: $font-family-base;
    font-weight: normal;
    +pc-layout()
      font-size: 22px;
      line-height: 32px;
    +sp-layout()
      font-size: 20px;
      line-height: 30px;

  .menu
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    overflow: hidden;
    +pc-layout()
      padding 0 32px;
      height: 60px;
      background-color: $bg-dark;
      box-shadow: 0 0 10px $bg-dark-dim inset;
      transition: all 0.5s ease;
      animation: fadeIn 0.5s ease-out;
      &:hover {
        border-radius: 30px;
      }
    +sp-layout()
      width: 100%;
      height: 56px;
      transform: translateY(40px);
      text-shadow: 0 0 1px $bg-dark-dim;
      box-shadow: 0 -1px 2px $bg-dark;
      background-color: rgba(25, 24, 35, 0.3);
    .menu-item
      width: 50px;
      transition: color 0.3s ease;
      +pc-layout()
        font-size: $font-size-large;
        &:hover
          color: $link-color;
      +sp-layout()
        font-size: $font-size-normal;
      li
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;


